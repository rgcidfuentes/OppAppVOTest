<h1>Añadir un nuevo miembro de Opticalia VO</h1>

<%= form_for @peep, :html => {:multipart => true} do |f| %>
  
  
    <%= f.label :nom_i_cognoms %>
    <%= f.text_field :name %>
  
    <%= f.label :cargo, "Cargo castellano" %>
    <%= f.text_field :carrec %>

    <%= f.label :cargo, "Càrrec català" %>
    <%= f.text_field :carrecca %>


    <%= f.label :description, "Descripción castellano" %>
    <%= f.text_area :description, size: '50x9' %>
 
    <%= f.label :description, "Descripció català" %>
    <%= f.text_area :descriptionca, size: '50x9' %>


<br>
    <%= f.label :name, "URL Imagen" %>
    <%= f.text_field :image %>
    <br>
    <%= f.submit %>
<% end %>
