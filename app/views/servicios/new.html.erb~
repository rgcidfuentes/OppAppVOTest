<h1>Añadir una nueva instalacion</h1>


<%= form_for @servicio, :html => {:multipart => true} do |f| %>
  
  
    <%= f.label :name, "Instalación castellano" %>
    <%= f.text_field :name %>
  
    <%= f.label :name, "Instal·lació català" %>
    <%= f.text_field :nameca %>

    <%= f.label :description,"Descripción castellano" %>
    <%= f.text_area :description, size: '50x9' %>
 
    <%= f.label :description, "Descripció català" %>
    <%= f.text_area :descriptionca, size: '50x9' %>
    <br>
     <%= cl_image_upload_tag(:image_id,
                        :tags => "directly_uploaded",
                        :crop => :limit, :width => 400, :height => 400,
                        :eager => [{ :crop => :fill, :width => 150, :height => 100 }],
                        :html => { :style => "margin-top: 30px" }  
                       ) %>

    <br>
  <%= f.submit %>
<% end %>

<span class="label label-success"></span>

<script>
$(document).ready(function() { 
$('.cloudinary-fileupload').bind('cloudinarydone', function(e, data) {  
	
 $(".label-success").text("Fichero cargado con éxito");
  return true;
});

$('.cloudinary-fileupload').bind('fileuploadchange', function() { $(this).hide()});

});

</script>
