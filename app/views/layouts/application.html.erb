    <div class="container">
      <p class="notice"><%= notice %></p>
      <% if notice.present? %><p class="alert"><%= alert %></p><% end %>

      <%= yield %>
      <%= render 'layouts/footer' %>
      <% debug(params) if Rails.env.development? %>
    </div>

